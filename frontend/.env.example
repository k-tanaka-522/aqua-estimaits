# アプリケーション設定
VITE_APP_NAME=Aqua-Estimaits
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="水産養殖事業者向け統合管理システム"

# API設定
VITE_API_BASE_URL=http://localhost:5000/api/v1
VITE_API_TIMEOUT=30000

# 認証設定
VITE_AUTH_STORAGE_KEY=aqua_estimaits_auth
VITE_AUTH_HEADER=Authorization
VITE_AUTH_TOKEN_TYPE=Bearer

# 機能フラグ
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_MAINTENANCE_MODE=false

# PWA設定
VITE_PWA_ENABLED=true
VITE_PWA_THEME_COLOR=#007bff
VITE_PWA_BACKGROUND_COLOR=#ffffff

# 分析設定（本番環境用）
VITE_ANALYTICS_ID=your-analytics-id
VITE_SENTRY_DSN=your-sentry-dsn

# キャッシュ設定
VITE_CACHE_TTL=3600
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=600000

# 地図設定（オプション）
VITE_MAPBOX_TOKEN=your-mapbox-token
VITE_DEFAULT_LAT=35.6762
VITE_DEFAULT_LNG=139.6503
VITE_DEFAULT_ZOOM=12

# 日付設定
VITE_DEFAULT_TIMEZONE=Asia/Tokyo
VITE_DATE_FORMAT=yyyy-MM-dd
VITE_TIME_FORMAT=HH:mm
VITE_DATETIME_FORMAT=yyyy-MM-dd HH:mm

# ローカライゼーション
VITE_DEFAULT_LOCALE=ja
VITE_FALLBACK_LOCALE=en
VITE_AVAILABLE_LOCALES=ja,en

# UI設定
VITE_THEME_PRIMARY_COLOR=#007bff
VITE_THEME_SECONDARY_COLOR=#6c757d
VITE_THEME_SUCCESS_COLOR=#28a745
VITE_THEME_ERROR_COLOR=#dc3545
VITE_THEME_WARNING_COLOR=#ffc107
VITE_THEME_INFO_COLOR=#17a2b8

# グラフ設定
VITE_CHART_ANIMATION_DURATION=750
VITE_CHART_TOOLTIP_ENABLED=true
VITE_CHART_LEGEND_ENABLED=true

# 開発設定
VITE_DEV_MOCK_API=false
VITE_DEV_LOGGER_ENABLED=true
VITE_DEV_QUERY_DEVTOOLS=true

# デプロイ設定
VITE_DEPLOY_ENV=development
VITE_DEPLOY_REGION=ap-northeast-1
VITE_DEPLOY_STAGE=dev
