# アプリケーション設定
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# データベース設定
MONGODB_URI=mongodb://mongodb:27017/aqua-estimaits
MONGODB_USER=admin
MONGODB_PASSWORD=password

# JWT設定
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# CORS設定
CORS_ORIGIN=http://localhost:3000

# ログ設定
LOG_LEVEL=debug
LOG_FORMAT=dev

# AWS設定（本番環境用）
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# DocumentDB設定（本番環境用）
DOCDB_SSL=true
DOCDB_SSL_VALIDATE=true
DOCDB_RETRY_WRITES=false

# セキュリティ設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
BCRYPT_SALT_ROUNDS=10

# メール設定（オプション）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@aqua-estimaits.com

# 監視設定
ENABLE_METRICS=true
METRICS_PORT=9100

# キャッシュ設定
CACHE_TTL=3600
CACHE_CHECK_PERIOD=120

# バックアップ設定
BACKUP_ENABLED=true
BACKUP_CRON=0 0 * * *
BACKUP_RETENTION_DAYS=7

# 開発用設定
DEBUG=app:*
ENABLE_SWAGGER=true
ENABLE_MORGAN=true
